<div class="container">
  <h1> Cocktails </h1>

  <%= link_to '+ Cocktail', new_cocktail_path %>

  <ul>
  <% @cocktails.each do |cocktail| %>
    <li><h3> <%= cocktail.name %> </h3>
    <p><%= cl_image_tag cocktail.photo, height: 150, width: 200, crop: :fill %></p> <br>

    <%= link_to 'Voir', cocktail_path(cocktail) %> |
    <%= link_to '- Supprimer', cocktail_path(cocktail), method: :delete %>
    </li>
  <% end %>
  </ul>
</div>
